<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="500dp"
    android:gravity="center"
    android:layout_margin="16dp"
    android:background="@color/RareDialogBackgroundColor">

    <TextView
        android:id="@+id/RareDialogTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/rarePullDialogTitle"
        android:textSize="50sp"
        android:textColor="@color/RareDialogTextColor"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <ImageView
        android:id="@+id/DialogImage"
        android:layout_width="350dp"
        android:layout_height="350dp"/>

    <Button
        android:id="@+id/RareDialogButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/commonDialogButtonText"/>

</androidx.appcompat.widget.LinearLayoutCompat>